<%@ page import="com.officegain.enigma.base.Product" %>
<!doctype html>
<html>
<head>
    <meta name="layout" content="main">
    <g:set var="entityName" value="${message(code: 'product.label', default: 'Product')}"/>
    <title><g:message code="default.show.label" args="[entityName]"/></title>
    <resource:richTextEditor type="full"/>
    <script type="text/javascript" src="${resource(dir: 'js', file: 'product.js')}"></script>
    <script type="text/javascript" src="${resource(dir: 'js', file: 'jquery.form.js')}"></script>
    <style>
    .ui-widget-header {
        background: url("images/ui-bg_gloss-wave_35_f6a828_500x100.png") repeat-x scroll 50% 50% #F6A828;
        background-color: #ABBF78;
        border: 1px solid #ABBF78;
        font-weight: bold;
    }

    .ui-tabs .ui-tabs-nav li a {
        float: left;
        padding: 0.25em 0.7em;
        text-decoration: none;
    }

    .ui-state-active a, .ui-state-active a:link, .ui-state-active a:visited {
        color: #666666;
        text-decoration: none;
    }

    .ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited {
        color: #666666;
        text-decoration: none;
    }

    .ui-widget {
        font-family: Trebuchet MS, Tahoma, Verdana, Arial, sans-serif;
        font-size: 1em;
    }

    </style>
</head>

<body>
<div class="demo">
    <g:render template="showForm"/>
</div>
</body>
</html>
