<%@ page import="com.maali.tournamentmanager.MInstitution" %>
<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'name', 'error')} ">
    <label for="name">
        <g:message code="MInstitution.name.label" default="Name"/>
    </label>
    <g:textField name="name" value="${MInstitutionInstance?.name}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'emailAddress', 'error')} required">
    <label for="emailAddress">
        <g:message code="MInstitution.emailAddress.label" default="Email Address"/>
        <span class="required-indicator">*</span>
    </label>
    <g:field type="email" name="emailAddress" required="" value="${MInstitutionInstance?.emailAddress}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'password', 'error')} required">
    <label for="password">
        <g:message code="MInstitution.password.label" default="Password"/>
        <span class="required-indicator">*</span>
    </label>
    <g:textField name="password" required="" value="" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'email1', 'error')} required">
    <label for="email1">
        <g:message code="MInstitution.email1.label" default="Email1"/>
        <span class="required-indicator">*</span>
    </label>
    <g:field type="email" name="email1" required="" value="${MInstitutionInstance?.email1}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'email2', 'error')} required">
    <label for="email2">
        <g:message code="MInstitution.email2.label" default="Email2"/>
        <span class="required-indicator">*</span>
    </label>
    <g:field type="email" name="email2" required="" value="${MInstitutionInstance?.email2}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'currency', 'error')} required">
    <label for="currency">
        <g:message code="MInstitution.currency.label" default="Currency"/>
        <span class="required-indicator">*</span>
    </label>
    <g:textField name="currency" required="" value="${MInstitutionInstance?.currency}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'phone', 'error')} ">
    <label for="phone">
        <g:message code="MInstitution.phone.label" default="Phone"/>

    </label>
    <g:textField name="phone" maxlength="12" value="${MInstitutionInstance?.phone}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'phoneExt', 'error')} ">
    <label for="phoneExt">
        <g:message code="MInstitution.phoneExt.label" default="Phone Ext"/>

    </label>
    <g:textField name="phoneExt" maxlength="14" value="${MInstitutionInstance?.phoneExt}" style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'annualMembershipAmount', 'error')} required">
    <label for="annualMembershipAmount">
        <g:message code="MInstitution.annualMembershipAmount.label" default="Annual Membership Amount"/>
        <span class="required-indicator">*</span>
    </label>
    <g:field type="number" name="annualMembershipAmount" required="" value="${fieldValue(bean: MInstitutionInstance, field: 'annualMembershipAmount')}"
             style="width: 250px"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'address', 'error')} ">
    <label for="address">
        <g:message code="MInstitution.address.label" default="Address"/>

    </label>
    <g:textArea rows="25" cols="3" name="address" value="${MInstitutionInstance?.address}"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'membershipFee', 'error')} ">
    <label for="membershipFee">
        <g:message code="MInstitution.membershipFee.label" default="Membership Fee"/>

    </label>
    <g:checkBox name="membershipFee" value="${MInstitutionInstance?.membershipFee}"/>
</div>

<div class="fieldcontain ${hasErrors(bean: MInstitutionInstance, field: 'type', 'error')} ">
